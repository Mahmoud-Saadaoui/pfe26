{
  "info": {
    "name": "PFE26 Backend API",
    "_postman_id": "pfe26-backend-collection",
    "description": "Collection to test Auth, Users and Interventions endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth / Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nom\": \"Test\",\n  \"prenom\": \"User\",\n  \"email\": \"testuser@example.com\",\n  \"motDePasse\": \"Secur3!Pass\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/auth/register", "host": ["{{baseUrl}}"], "path": ["api","auth","register"] }
      }
    },
    {
      "name": "Auth / Login (sets token)",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"motDePasse\": \"Secur3!Pass\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/auth/login", "host": ["{{baseUrl}}"], "path": ["api","auth","login"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "  const json = pm.response.json();",
              "  if (json.token) pm.environment.set('token', json.token);",
              "  console.log('Token saved to environment variable token');",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Auth / Me",
      "request": {
        "method": "GET",
        "header": [ { "key": "auth-token", "value": "{{token}}" } ],
        "url": { "raw": "{{baseUrl}}/api/auth/me", "host": ["{{baseUrl}}"], "path": ["api","auth","me"] }
      }
    },
    {
      "name": "Users / Get All",
      "request": {
        "method": "GET",
        "header": [ { "key": "auth-token", "value": "{{token}}" } ],
        "url": { "raw": "{{baseUrl}}/api/users", "host": ["{{baseUrl}}"], "path": ["api","users"] }
      }
    },
    {
      "name": "Interventions / Create",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "auth-token", "value": "{{token}}" } ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"communeId\": 1,\n  \"themeId\": 1,\n  \"nomUsager\": \"Ali\",\n  \"prenomUsager\": \"Ben\",\n  \"question\": \"Quelle est la procédure ?\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/interventions", "host": ["{{baseUrl}}"], "path": ["api","interventions"] }
      }
    },
    {
      "name": "Interventions / Get All",
      "request": {
        "method": "GET",
        "header": [ { "key": "auth-token", "value": "{{token}}" } ],
        "url": { "raw": "{{baseUrl}}/api/interventions", "host": ["{{baseUrl}}"], "path": ["api","interventions"] }
      }
    },
    {
      "name": "Interventions / Get One (replace :id)",
      "request": {
        "method": "GET",
        "header": [ { "key": "auth-token", "value": "{{token}}" } ],
        "url": { "raw": "{{baseUrl}}/api/interventions/:id", "host": ["{{baseUrl}}"], "path": ["api","interventions",":id"] }
      }
    },
    {
      "name": "Interventions / Reply (replace :id)",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "auth-token", "value": "{{token}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"reponse\": \"Voici la réponse\",\n  \"satisfaction\": 4,\n  \"setStatutTo\": \"TRAITEE\"\n}" },
        "url": { "raw": "{{baseUrl}}/api/interventions/:id/reply", "host": ["{{baseUrl}}"], "path": ["api","interventions",":id","reply"] }
      }
    },
    {
      "name": "Interventions / Change Status (replace :id)",
      "request": {
        "method": "PATCH",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "auth-token", "value": "{{token}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"statut\": \"ARCHIVEE\"\n}" },
        "url": { "raw": "{{baseUrl}}/api/interventions/:id/status", "host": ["{{baseUrl}}"], "path": ["api","interventions",":id","status"] }
      }
    },
    {
      "name": "Interventions / Add Attachment (replace :id)",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "auth-token", "value": "{{token}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"publicId\": \"cloud_id_123\",\n  \"secureUrl\": \"https://res.cloudinary.com/.../file.jpg\",\n  \"type\": \"image/jpeg\"\n}" },
        "url": { "raw": "{{baseUrl}}/api/interventions/:id/attachments", "host": ["{{baseUrl}}"], "path": ["api","interventions",":id","attachments"] }
      }
    },
    {
      "name": "Interventions / Stats",
      "request": {
        "method": "GET",
        "header": [ { "key": "auth-token", "value": "{{token}}" } ],
        "url": { "raw": "{{baseUrl}}/api/interventions/stats", "host": ["{{baseUrl}}"], "path": ["api","interventions","stats"] }
      }
    },
    {
      "name": "Interventions / Top Themes",
      "request": {
        "method": "GET",
        "header": [ { "key": "auth-token", "value": "{{token}}" } ],
        "url": { "raw": "{{baseUrl}}/api/interventions/top-themes", "host": ["{{baseUrl}}"], "path": ["api","interventions","top-themes"] }
      }
    },
    {
      "name": "Interventions / Top Communes",
      "request": {
        "method": "GET",
        "header": [ { "key": "auth-token", "value": "{{token}}" } ],
        "url": { "raw": "{{baseUrl}}/api/interventions/top-communes", "host": ["{{baseUrl}}"], "path": ["api","interventions","top-communes"] }
      }
    }
  ]
}
